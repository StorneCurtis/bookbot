from stats import count_characters

def sort_on(items):
    return items["num"]

def print_report(dict):
    characters = []
    for c in dict:
        temp_dict = {}
        temp_dict["char"] = c
        temp_dict["num"] = dict[c]
        characters.append(temp_dict)
    characters.sort(reverse=True,key=sort_on)
    
    #print(characters)
    return characters

print_report(count_characters("books/frankenstein.txt"))